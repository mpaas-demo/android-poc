<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.alipay.mobile.antui.basic.AUTitleBar
        android:id="@+id/title_atb"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.alipay.mobile.antui.basic.AUButton
        android:id="@+id/share_share_btn"
        style="@style/mainButtonStyle"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:text="@string/click_to_share" />

    <com.alipay.mobile.antui.basic.AUAssistLabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:text="@string/mpaas_share_notice" />

    <com.alipay.mobile.antui.basic.AUButton
        android:id="@+id/share_get_instructions_btn"
        style="@style/mainButtonStyle"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:visibility="gone"
        android:text="@string/get_instructions" />

</LinearLayout>